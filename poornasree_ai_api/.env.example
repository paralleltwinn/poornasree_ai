# Poornasree AI Chatbot API Configuration
# Copy this file to .env and customize as needed

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Free tier configuration - no API keys required for local models
# Uncomment and add keys if you want to use paid services later

# OpenAI API (optional - for better AI responses)
# OPENAI_API_KEY=your_openai_api_key_here

# Azure OpenAI (optional - for enterprise features)
# AZURE_OPENAI_API_KEY=your_azure_openai_key
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/

# Database Configuration (using local ChromaDB for free tier)
CHROMA_DB_PATH=./data/chroma_db

# File Upload Configuration
UPLOAD_DIR=./data/uploads
MAX_FILE_SIZE_MB=10

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./data/logs/api.log

# CORS Configuration (for Flutter web app)
ALLOWED_ORIGINS=*

# Model Configuration (free local models)
CHAT_MODEL_NAME=microsoft/DialoGPT-small
EMBEDDING_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2

# Processing Configuration
MAX_CHUNK_SIZE=500
CHUNK_OVERLAP=50
MAX_SEARCH_RESULTS=5

# Free tier limits
MAX_DOCUMENTS_PER_USER=100
MAX_CHAT_REQUESTS_PER_MINUTE=30
